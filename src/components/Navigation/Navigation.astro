---
import { useTranslations } from "../../i18n/utils";
import { Icon } from 'astro-icon/components';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as "en" | "es");
---

<nav class="navigation" aria-label="Main Navigation">
  <div class="nav-container">
    <a href={`/${lang}/`} class="logo-link" aria-label="Home">
      <Icon name="logo" />
    </a>
    
    <button 
      class="mobile-menu-button" 
      aria-label="Toggle menu" 
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="hamburger"></span>
    </button>

    <ul class="nav-list" id="mobile-menu">
      <li>
        <a
          href="/en/"
          class={lang === "en" ? "active" : ""}
          aria-current={lang === "en" ? "page" : undefined}
          hreflang="en"
        >
          English
        </a>
      </li>
      <li>
        <a
          href="/es/"
          class={lang === "es" ? "active" : ""}
          aria-current={lang === "es" ? "page" : undefined}
          hreflang="es"
        >
          Espa√±ol
        </a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .navigation {
    padding: 1rem;
    background-color: var(--bg-primary-dark);
    border-bottom: 1px solid var(--border-neutral);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: all 0.2s ease-in-out;

    [data-icon="logo"] {
      height: 50px;
      width: auto;
      color: var(bg-primary-light);
    }

    &:hover {
      [data-icon="logo"] {
        color: var(--accent-hover);
      }
    }
  }

  .mobile-menu-button {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 100;
    width: 24px;
    height: 24px;
    position: relative;
  }

  .hamburger {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 24px;
    height: 2px;
    background: var(--text-primary-dark);
    transition: all 0.3s ease-in-out;
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    left: 0;
    width: 24px;
    height: 2px;
    background: var(--text-primary-dark);
    transition: all 0.3s ease-in-out;
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  .mobile-menu-button[aria-expanded="true"] .hamburger {
    background: transparent;
  }

  .mobile-menu-button[aria-expanded="true"] .hamburger::before {
    top: 0;
    transform: rotate(45deg);
  }

  .mobile-menu-button[aria-expanded="true"] .hamburger::after {
    bottom: 0;
    transform: rotate(-45deg);
  }

  .nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem;
  }

  .nav-list a {
    text-decoration: none;
    color: var(--text-primary-dark);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.2s ease-in-out;
  }

  .nav-list a:hover {
    color: var(--accent-hover);
    background-color: var(--bg-secondary-dark);
  }

  .nav-list a.active {
    color: var(--accent-brand);
    font-weight: 600;
    position: relative;
  }

  .nav-list a.active::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--accent-brand);
  }

  @media (max-width: 768px) {
    .mobile-menu-button {
      display: block;
    }

    .nav-list {
      display: none;
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-color: var(--bg-primary-dark);
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      padding: 2rem;
      z-index: 99;
    }

    .nav-list[aria-hidden="false"] {
      display: flex;
    }

    .nav-list a {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.nav-list');
  const mobileMenuLinks = document.querySelectorAll('.nav-list a');

  function toggleMenu() {
    const isExpanded = mobileMenuButton?.getAttribute('aria-expanded') === 'true';
    mobileMenuButton?.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.setAttribute('aria-hidden', isExpanded.toString());
  }

  mobileMenuButton?.addEventListener('click', toggleMenu);

  // Close menu when a link is clicked
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth <= 768) {
        toggleMenu();
      }
    });
  });

  // Close menu when clicking outside
  document.addEventListener('click', (event) => {
    const isClickInside = mobileMenu?.contains(event.target as Node) || 
                         mobileMenuButton?.contains(event.target as Node);
    
    if (!isClickInside && window.innerWidth <= 768 && 
        mobileMenuButton?.getAttribute('aria-expanded') === 'true') {
      toggleMenu();
    }
  });
</script>

