---
import { Icon } from 'astro-icon/components';
import AvatarCanvas from '../react/AvatarCanvas';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import type { Lang } from "../../types/languaje";

const lang = getLangFromUrl(Astro.url) as Lang;
const t = useTranslations(lang);

---

<section class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between py-8 md:py-12">
    <div class="flex-1 space-y-6">
        <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-accent to-primary !text-transparent bg-clip-text">
            <span class="block">CÃ³digo Obsidiana</span>
            <span class="text-base-content text-3xl md:text-4xl font-medium mt-2">{t('home.hero.name')}</span>
        </h1>
        
        <p class="text-lg md:text-xl max-w-prose" set:html={t('home.hero.tagline')
            .replace('<0>', '<span class="text-accent font-medium">')
            .replace('</0>', '</span>')}
        />
        
        <div class="flex flex-wrap gap-4 pt-4">
            <a href={`/${lang}/about`} class="btn btn-primary">
                {t('home.hero.about_button')}
                <Icon name="mdi:arrow-right" class="w-5 h-5" />
            </a>
            <a href={`/${lang}/blog`} class="btn btn-outline">
                {t('home.hero.blog_button')}
            </a>
        </div>
    </div>
    
    <div class="flex-1 flex justify-center md:justify-end">
        <div class="relative w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden border-4 border-base-content shadow-2xl">
            <div class="absolute inset-0 bg-gradient-to-t from-base-content/80 to-transparent"></div>
            <AvatarCanvas client:load />
        </div>
    </div>
</section> 