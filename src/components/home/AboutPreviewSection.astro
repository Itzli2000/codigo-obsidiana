---
import { Icon } from 'astro-icon/components';

interface Props {
    lang: "en" | "es";
    t: (key: string) => string;
}

const { lang, t } = Astro.props;

---

<section class="py-8 md:py-12 bg-base-100 rounded-xl p-8 shadow-lg">
    <h2 class="font-serif text-2xl md:text-3xl font-bold mb-6">
        {t('home.about_preview.title')}
    </h2>
    
    <div class="prose prose-lg max-w-none">
        <p>{t('home.about_preview.content.0')}</p>
        <p>{t('home.about_preview.content.1')}</p>
    </div>
    
    <div class="mt-8">
        <a href={`/${lang}/about`} class="btn btn-primary">
            {t('home.about_preview.learn_more')}
            <Icon name="mdi:arrow-right" class="w-5 h-5" />
        </a>
    </div>
</section> 