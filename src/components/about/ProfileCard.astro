---
import SectionNav from "../Navigation/SectionNav.astro";

interface Props {
  role: string;
  tagline: string;
  description: string;
  sections: {
    id: string;
    label: string;
  }[];
}

const { role, tagline, description, sections } = Astro.props;
---

<div class="space-y-4 md:space-y-6 lg:space-y-7">
  <h1
    class="text-base-content/80 font-playfair font-bold text-2xl md:text-3xl lg:text-4xl tracking-tight"
  >
    Ariel Itzli Molina SÃ¡nchez
  </h1>
  <p class="text-xl md:text-2xl font-playfair font-bold text-base-content tracking-tight">
    {role}
  </p>
  <h2 class="text-base md:text-lg font-inter text-base-content/80 leading-relaxed">
    {tagline}
  </h2>
  <div class="prose prose-base md:prose-lg prose-base-content">
    <p class="leading-relaxed">
      {description}
    </p>
  </div>

  <div class="pb-4 pt-1 hidden lg:block">
    <SectionNav sections={sections} orientation="vertical" className="w-full" />
  </div>

  <div class="flex flex-wrap gap-3 md:gap-4">
    <a
      href="https://github.com/Itzli2000"
      target="_blank"
      class="btn btn-ghost btn-sm md:btn-md"
      aria-label="GitHub Profile"
    >
      GitHub
    </a>
    <a
      href="https://www.linkedin.com/in/ariel-itzli-molina-s%C3%A1nchez-0b4a09129/"
      target="_blank"
      class="btn btn-ghost btn-sm md:btn-md"
      aria-label="LinkedIn Profile"
    >
      LinkedIn
    </a>
    <a href="/resume.pdf" target="_blank" class="btn btn-ghost btn-sm md:btn-md" aria-label="Download Resume">
      Resume
    </a>
  </div>
</div>
