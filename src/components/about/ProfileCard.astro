---
interface Props {
  role: string;
  tagline: string;
  description: string;
}

const { role, tagline, description } = Astro.props;
---

<div class="space-y-8">
  <h1 class="text-4xl font-playfair font-bold tracking-tight text-base-content">
    {role}
  </h1>
  <h2 class="text-xl font-inter text-base-content/80">
    {tagline}
  </h2>
  <div class="prose prose-lg prose-base-content">
    <p class="leading-relaxed">
      {description}
    </p>
  </div>
  
  <div class="flex gap-4 mt-8">
    <a href="https://github.com/yourusername" class="btn btn-ghost btn-sm">
      GitHub
    </a>
    <a href="https://linkedin.com/in/yourusername" class="btn btn-ghost btn-sm">
      LinkedIn
    </a>
    <a href="/resume.pdf" class="btn btn-ghost btn-sm">
      Resume
    </a>
  </div>
</div> 