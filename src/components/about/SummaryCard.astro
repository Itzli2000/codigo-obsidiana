---
interface Props {
  title: string;
  summary: string;
}

const { title, summary } = Astro.props;
---

<div class="space-y-4">
  <h2 class="text-2xl font-playfair font-bold">{title}</h2>

  <div
    class="group relative grid pb-1 transition-all sm:grid-cols-8 sm:gap-8 md:gap-4"
  >
    <div
      class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block"
    >
    </div>

    <div class="z-10 sm:col-span-8">
      <p class="text-base leading-relaxed text-base-content/80">
        {summary}
      </p>
    </div>
  </div>
</div>

