---
import SectionTitle from "./SectionTitle.astro";

interface Props {
  title: string;
  languagesTitle: string;
  frameworksTitle: string;
  toolsTitle: string;
  otherTitle: string;
}

const { title, languagesTitle, frameworksTitle, toolsTitle, otherTitle } = Astro.props;

// Define skill categories and their items
const skillCategories = [
  {
    title: languagesTitle,
    items: ["JavaScript (ES6+)", "TypeScript", "HTML & CSS"]
  },
  {
    title: frameworksTitle,
    items: ["React", "Next.js", "Astro"]
  },
  {
    title: toolsTitle,
    items: ["Git", "VS Code", "Figma"]
  },
  {
    title: otherTitle,
    items: ["Accessibility", "Performance", "Testing"]
  }
];
---

<div class="space-y-6 md:space-y-8">
  <SectionTitle title={title} />
  
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:gap-8 lg:gap-10">
    {skillCategories.map(category => (
      <div class="space-y-3 md:space-y-4">
        <h3 class="text-base md:text-lg font-medium text-base-content/80 border-b border-base-content/10 pb-1">{category.title}</h3>
        <ul class="space-y-2 md:space-y-3">
          {category.items.map(item => (
            <li class="flex items-center gap-2 text-sm md:text-base transition-all duration-200 hover:translate-x-1 hover:text-primary">
              <span class="h-1.5 w-1.5 rounded-full bg-primary"></span>
              {item}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</div> 