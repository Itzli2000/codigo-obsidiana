---
import { useTranslations } from "../i18n/utils";
import '../styles/global.css';
import Navigation from '../components/Navigation/Navigation.astro';

interface Props {
  title?: string;
  lang: string;
}

const { title = "My Website", lang } = Astro.props;
const t = useTranslations(lang as "en" | "es");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Personal portfolio website showcasing my work and experience" />
    <title>{title}</title>
  </head>
    <body class="min-h-screen bg-base-100 text-base-content">
    <Navigation lang="en" />
    <slot />
    <footer>
      <p>&copy; {new Date().getFullYear()} - {t("footer.rights")}</p>
    </footer>
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    min-height: 100vh;
  }

  main {
    max-width: max(1000px, 90vw);
    margin: 0 auto;
    padding: 1rem 0;
  }

  footer {
    text-align: center;
    padding: 2rem;
  }
</style>